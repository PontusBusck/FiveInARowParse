<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fiveinrowparse.GameListActivity"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/game_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        </ListView>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000"
        android:layout_weight="1">

        <Button
            android:id="@+id/play_with_friend_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play with Friend"
            android:onClick="playWithFriend"/>
    <Button
        android:layout_toRightOf="@+id/play_with_friend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add friend"
        android:onClick="openAddFriendsActivity"/>
        </RelativeLayout>




</LinearLayout>
