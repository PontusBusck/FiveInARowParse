<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_background_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Gametype"
        android:textSize="35sp"
        android:textColor="@color/gray_background_color"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/start_local_game"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="Local"
            android:textColor="#FFFFFF"
            android:layout_marginRight="12dp"
            android:background="@drawable/game_list_button"
            android:onClick="openLocalGameOptionScreen"/>

        <Button
            android:id="@+id/start_online_game"
            android:layout_width="wrap_content"
            android:background="@drawable/game_list_button"
            android:layout_height="@dimen/button_height"
            android:layout_toRightOf="@+id/start_local_game"
            android:text="Online"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="12dp"
            android:onClick="openOnlineGameOptionScreen"/>

    </LinearLayout>


</RelativeLayout>
