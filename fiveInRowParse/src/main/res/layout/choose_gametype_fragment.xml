<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Gametype"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    <Button
        android:id="@+id/start_local_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local"
        android:layout_marginRight="12dp"
        android:onClick="openLocalGameOptionScreen"/>

    <Button
        android:id="@+id/start_online_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/start_local_game"
        android:text="Online"
        android:layout_marginLeft="12dp"
        android:onClick="openOnlineGameOptionScreen"/>

</LinearLayout>


</RelativeLayout>